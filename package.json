{
  "name": "@componentor/fs",
  "version": "2.0.12",
  "description": "Battle-tested OPFS-based Node.js fs polyfill with sync and async APIs",
  "license": "MIT",
  "author": "Componentor",
  "repository": {
    "type": "git",
    "url": "https://github.com/componentor/fs.git"
  },
  "bugs": {
    "url": "https://github.com/componentor/fs/issues"
  },
  "homepage": "https://github.com/componentor/fs#readme",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./sw": "./dist/workers/service.worker.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "cd src && npx tsup",
    "build:future": "cd future && npx tsup",
    "dev": "cd src && npx tsup --watch",
    "test": "cd src && npx vitest run",
    "benchmark": "npm run build && npm run build:future && playwright test",
    "benchmark:server": "node tests/benchmark/server.js",
    "benchmark:open": "npm run build && npm run build:future && node tests/benchmark/server.js",
    "typecheck": "tsc -p src/tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@isomorphic-git/lightning-fs": "^4.6.0",
    "@playwright/test": "^1.40.0",
    "@types/node": "^25.0.3",
    "@vitest/browser": "^4.0.16",
    "@vitest/browser-playwright": "^4.0.16",
    "buffer": "^6.0.3",
    "events": "^3.3.0",
    "playwright": "^1.40.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "opfs",
    "filesystem",
    "fs",
    "polyfill",
    "browser",
    "sync",
    "async"
  ]
}
